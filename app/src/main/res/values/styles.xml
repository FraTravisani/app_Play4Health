<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    stile per Toast errore-->
    <style name="errorToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#ff0000</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#ff0000</item>
        <item name="stIconStart">@drawable/ic_baseline_error_24</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <!--    stile per Toast esito corretto-->

    <style name="rightToast">
        <item name="stTextBold">true</item>
