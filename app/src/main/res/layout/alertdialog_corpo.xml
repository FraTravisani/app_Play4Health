<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D7FFA7"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        android:backgroundTint="#D7FFA7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textAlertCorpoTitolo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="PARTI DEL CORPO"
                android:textAlignment="center"
                android:textColor="#000000" />

            <FrameLayout
                android:id="@+id/button_AlertCorpo"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/button_corpo"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/textAlertCorpoCorpo"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:textSize="45dp"
                    android:textColor="#000000"
                    android:layout_gravity="right"
                    android:text="Corpo"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/button_AlertViso"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/button_viso"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textAlertCorpoViso"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:textSize="45dp"
                    android:textColor="#000000"
                    android:layout_gravity="right"
                    android:text="Viso"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/button_AlertMano"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/button_mano"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textAlertCorpoMano"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:textSize="45dp"
                    android:textColor="#000000"
                    android:layout_gravity="right"
                    android:text="Mano"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/button_AlertCorpoScegli"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/button_corposcegli"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textAlertCorpoScegli"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:textSize="45dp"
                    android:textColor="#000000"
                    android:layout_gravity="right"
                    android:text="Scegli"/>
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ita"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ita"
                    app:layout_constraintRight_toLeftOf="@+id/fra"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/fra"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/fra"
                    app:layout_constraintRight_toLeftOf="@+id/eng"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@+id/ita"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/eng"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/eng"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@+id/fra"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"  />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>