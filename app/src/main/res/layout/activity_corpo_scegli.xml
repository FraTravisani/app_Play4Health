<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7FFA7"
    tools:context=".AppPavone.ActivityCorpoScegli">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/button_indietro"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="270dp"
                android:layout_height="56dp"
                android:autoSizeTextType="uniform"
                android:layout_marginStart="4dp"
                android:paddingTop="3dp"
                android:text="Scegli"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintStart_toEndOf="@+id/button_indietro"
                tools:layout_editor_absoluteY="6dp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_Ascolta"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:foreground="@drawable/audio"
        android:foregroundTint="@color/verdepistacchio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_CorpoScegli" />

    <Button
        android:id="@+id/button_Risp1"
        android:layout_width="157dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/verdepistacchio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Ascolta" />

    <Button
        android:id="@+id/button_Risp2"
        android:layout_width="157dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/verdepistacchio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Ascolta" />

    <ImageView
        android:id="@+id/esito1"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Risp1" />

    <ImageView
        android:id="@+id/imageView_CorpoScegli"
        android:layout_width="323dp"
        android:layout_height="338dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:visibility="visible"
        android:id="@+id/button_aiuto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/teal_800"
        android:background="@drawable/ic_baseline_help_outline_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/help1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/animation_pointing"
        android:elevation="7dp"
        android:rotation="50"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/button_Ascolta"
        app:layout_constraintEnd_toEndOf="@+id/button_Ascolta" />

    <ImageView
        android:id="@+id/help2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/animation_pointing"
        android:elevation="7dp"
        android:scaleY="-1"
        android:rotation="310"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/button_Risp1"
        app:layout_constraintTop_toBottomOf="@+id/button_Risp1" />

    <ImageView
        android:id="@+id/help3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/animation_pointing"
        android:elevation="7dp"
        android:rotation="50"
        android:scaleX="-1"
        android:scaleY="-1"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/button_Risp2"
        app:layout_constraintTop_toBottomOf="@+id/button_Risp2" />

    <android.widget.Button
        android:id="@+id/button_avanti"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_avanti"
        android:text="Avanti"
        android:textColor="@color/white"
        android:textAlignment="viewStart"
        android:paddingLeft="15dp"
        android:textSize="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>