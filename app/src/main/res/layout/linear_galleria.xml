<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_weight="1"
            app:cardCornerRadius="20sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_AscoltaScegli"
            app:layout_constraintVertical_bias="0.13">



            <ImageView
                android:id="@+id/imagePlay1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/playbutton"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageCard1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="6"
                    />

                <TextView
                    android:id="@+id/textCard1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingRight="1dp"
                    android:paddingLeft="2dp"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_weight="1.5" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_weight="1"
            app:cardCornerRadius="20sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_AscoltaScegli"
            app:layout_constraintVertical_bias="0.13">

            <ImageView
                android:id="@+id/imagePlay2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/playbutton"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageCard2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="6"
                    />

                <TextView
                    android:id="@+id/textCard2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingRight="1dp"
                    android:paddingLeft="2dp"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_weight="1.5" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>