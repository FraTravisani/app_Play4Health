<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



            <TextView
                android:id="@+id/textView_SB"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:autoSizeTextType="uniform"
                android:paddingBottom="5dp"
                android:paddingLeft="4dp"
                android:text="TextView"
                android:textColor="#0342FF"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView_SB"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toEndOf="@+id/textView_SB"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/textView_SB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView_SB"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />







</androidx.constraintlayout.widget.ConstraintLayout>