<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7FFA7"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <FrameLayout
            android:id="@+id/button_HomeAscolta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_ascolta"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="IMPARA"
                android:gravity="center"
                android:textColor="#000000"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="130dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button_HomeParla"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_parla"
            android:layout_weight="1">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="PARLA"
            android:textColor="#000000"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="130dp"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <FrameLayout
            android:id="@+id/button_HomeScegli"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_scegli"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="SCEGLI"
                android:textColor="#000000"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="130dp"/>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/button_HomeScrivere"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_scrivere"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="SCRIVI"
                android:textColor="#000000"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="130dp"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <FrameLayout
            android:id="@+id/button_HomeCampo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_campo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="130dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="CAMPO"
                android:textColor="#000000" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/button_HomeCorpo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_corpo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="130dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="CORPO"
                android:textColor="#000000" />


        </FrameLayout>
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/button_HomeCarica"
        android:layout_width="157dp"
        android:layout_height="76dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/teal_200"
        android:text="Carica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>