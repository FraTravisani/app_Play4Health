<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7FFA7"
    tools:context=".Home">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/button_HomeAggiorna"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="@drawable/ic_baseline_sincro_24"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <FrameLayout
                android:id="@+id/button_HomeDati"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_baseline_admin_panel_settings_24"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout5">


        <FrameLayout
            android:id="@+id/button_HomeAscolta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_ascolta">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="130dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="IMPARA"
                android:textColor="#000000" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button_HomeParla"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_parla">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="130dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="PARLA"
                android:textColor="#000000" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <FrameLayout
            android:id="@+id/button_HomeScegli"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_scegli"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="SCEGLI"
                android:textColor="#000000"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="130dp"/>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/button_HomeScrivere"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_scrivere"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="SCRIVI"
                android:textColor="#000000"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:layout_marginTop="130dp"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <FrameLayout
            android:id="@+id/button_HomeCampo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_campo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="130dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="CAMPO"
                android:textColor="#000000" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/button_HomeCorpo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_corpo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="130dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="CORPO"
                android:textColor="#000000" />


        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


        <FrameLayout
            android:id="@+id/button_HomeVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_video">

            <TextView
                android:layout_width="190dp"
                android:layout_height="80dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="GALLERIA VIDEO"
                android:textColor="#000000" />

        </FrameLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:progressTint="#273CB3"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminateTint="@android:color/black"
        app:layout_constraintVertical_bias="0.39" />


</androidx.constraintlayout.widget.ConstraintLayout>